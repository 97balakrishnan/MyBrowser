<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.balakrishnan.mybrowser.WebActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/backgroundIV"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_above="@id/urlLL"
            android:background="@android:color/transparent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <WebView
                android:id="@+id/main_web_view"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"

                />
        </android.support.v4.widget.SwipeRefreshLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="25dp"
            android:minHeight="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/urlLL"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/transparent_white_percent_65">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <com.cielyang.android.clearableedittext.ClearableEditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/urlET"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="18sp"
                    android:hint="Enter URL"
                    android:transitionName="urlET"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners2"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/send_icon"
                    android:transitionName="sendIcon"
                    android:background="@drawable/rounded_corners2"
                    android:layout_gravity="center"
                    android:id="@+id/sendIV"
                    android:tint="@android:color/black"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/previous_icon"
                    android:background="@drawable/rounded_corners2"
                    android:layout_gravity="center"
                    android:id="@+id/backIV"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/next_icon"
                    android:background="@drawable/rounded_corners2"
                    android:layout_gravity="center"
                    android:id="@+id/forwardIV"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"/>




            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>
